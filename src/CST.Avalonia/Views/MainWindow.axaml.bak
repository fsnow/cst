<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CST.Avalonia.ViewModels"
        xmlns:views="using:CST.Avalonia.Views"
        xmlns:converters="using:CST.Avalonia.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
        x:Class="CST.Avalonia.Views.MainWindow"
        Title="CST - Chaṭṭha Saṅgāyana Tipiṭaka"
        WindowStartupLocation="CenterScreen"
        Width="1400" Height="900"
        MinWidth="800" MinHeight="600">


    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open Book..." Command="{Binding ShowOpenBookCommand}"/>
                <Separator/>
                <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Show Open Book Panel" Command="{Binding ToggleOpenBookPanelCommand}" 
                          IsChecked="{Binding IsOpenBookPanelVisible}"/>
                <Separator/>
                <MenuItem Header="Tile Books Horizontally" Command="{Binding TileHorizontallyCommand}"/>
                <MenuItem Header="Tile Books Vertically" Command="{Binding TileVerticallyCommand}"/>
            </MenuItem>
            <MenuItem Header="Search">
                <MenuItem Header="Find in Current Book..." Command="{Binding FindInBookCommand}"/>
                <MenuItem Header="Search All Books..." Command="{Binding SearchAllBooksCommand}"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About CST" Command="{Binding AboutCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Main Content Grid -->
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Left panel for Open Book tree -->
                <ColumnDefinition Width="{Binding LeftPanelWidth}" MinWidth="200"/>
                <!-- Splitter -->
                <ColumnDefinition Width="Auto"/>
                <!-- Right panel for book tabs -->
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Open Book Tree -->
            <Border Grid.Column="0" 
                    BorderBrush="Gray" 
                    BorderThickness="0,0,1,0"
                    IsVisible="{Binding IsOpenBookPanelVisible}">
                <DockPanel>
                    <!-- Panel Header -->
                    <Border DockPanel.Dock="Top" 
                            Background="LightBlue" 
                            BorderBrush="Gray" 
                            BorderThickness="0,0,0,1">
                        <DockPanel Margin="8,4">
                            <TextBlock Text="Open Book" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center"/>
                            <Button DockPanel.Dock="Right"
                                    Command="{Binding ToggleOpenBookPanelCommand}"
                                    Content="✕"
                                    Width="20" Height="20"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ToolTip.Tip="Hide Open Book panel"/>
                        </DockPanel>
                    </Border>
                    
                    <!-- Open Book Content -->
                    <ContentControl Content="{Binding OpenBookContent}" />
                </DockPanel>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                          Background="Gray" 
                          Width="4"
                          HorizontalAlignment="Stretch"
                          IsVisible="{Binding IsOpenBookPanelVisible}"/>

            <!-- Right Panel: Book Display Area -->
            <DockPanel Grid.Column="{Binding RightPanelColumn}">
                <!-- Tab Strip -->
                <Border DockPanel.Dock="Top" 
                        Background="LightGray" 
                        BorderBrush="Gray" 
                        BorderThickness="0,0,0,1">
                    <DockPanel Margin="4">
                        <!-- Tab Headers -->
                        <ItemsControl ItemsSource="{Binding OpenBooks}" 
                                      VerticalAlignment="Center">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                    <Border Background="LightGray"
                                            BorderBrush="Gray"
                                            BorderThickness="1,1,1,0"
                                            Margin="0,0,2,0"
                                            Cursor="Hand">
                                        <DockPanel Margin="8,4">
                                            <Button DockPanel.Dock="Right"
                                                    Content="✕"
                                                    Width="16" Height="16"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    FontSize="10"
                                                    Margin="4,0,0,0"
                                                    ToolTip.Tip="Close book"/>
                                            <TextBlock Text="{Binding DisplayTitle}" 
                                                       MaxWidth="150"
                                                       TextTrimming="CharacterEllipsis"
                                                       VerticalAlignment="Center"/>
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Tab Actions -->
                        <StackPanel DockPanel.Dock="Right" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center">
                            <Button Command="{Binding CloseAllTabsCommand}" 
                                    Content="Close All"
                                    Padding="8,2"
                                    Margin="4,0"
                                    IsVisible="{Binding HasOpenBooks}"/>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Book Display Content -->
                <Grid>
                    <!-- Welcome Message (when no books are open) -->
                    <Border IsVisible="{Binding !HasOpenBooks}"
                            Background="WhiteSmoke">
                        <StackPanel HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"
                                    Spacing="16">
                            <TextBlock Text="📖" 
                                       FontSize="48" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Welcome to CST" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Select a book from the Open Book panel to begin reading"
                                       FontSize="14"
                                       Foreground="Gray"
                                       HorizontalAlignment="Center"/>
                            <Button Command="{Binding ShowOpenBookCommand}"
                                    Content="📁 Open Book Panel"
                                    Padding="12,8"
                                    FontWeight="Bold"
                                    IsVisible="{Binding !IsOpenBookPanelVisible}"/>
                        </StackPanel>
                    </Border>

                    <!-- Selected Book Display -->
                    <ContentControl Content="{Binding SelectedBookView}"
                                    IsVisible="{Binding HasOpenBooks}"/>
                </Grid>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>