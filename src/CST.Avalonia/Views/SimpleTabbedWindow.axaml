<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dock="using:Dock.Avalonia.Controls"
        xmlns:vm="using:CST.Avalonia.ViewModels"
        x:Class="CST.Avalonia.Views.SimpleTabbedWindow"
        x:DataType="vm:LayoutViewModel"
        Title="CST - Chaṭṭha Saṅgāyana Tipiṭaka"
        Width="1400" Height="900"
        MinWidth="800" MinHeight="600"
        WindowStartupLocation="CenterScreen">
    
    <!-- Main Layout with Menu, Toolbar and DockControl -->
    <DockPanel>
        <!-- Menu Bar - Temporarily removed for testing -->
        <!-- TODO: Re-enable menu once DataContext binding is fixed -->
        
        <!-- Top Toolbar -->
        <Border Background="LightGray" 
                BorderBrush="Gray" 
                BorderThickness="0,0,0,1" 
                Height="40"
                DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        Margin="8,4">
                <!-- Interface Language -->
                <TextBlock Text="Interface Language:" 
                          VerticalAlignment="Center" 
                          Margin="0,0,5,0"/>
                <ComboBox MinWidth="120" 
                          Margin="0,0,20,0"
                          x:Name="InterfaceLangCombo">
                    <ComboBoxItem Content="English" IsSelected="True"/>
                </ComboBox>
                
                <!-- Pali Script -->
                <TextBlock Text="Pali Script:" 
                          VerticalAlignment="Center" 
                          Margin="0,0,5,0"/>
                <ComboBox MinWidth="120"
                          x:Name="PaliScriptCombo"
                          ToolTip.Tip="Default script for Select a Book tree and new book windows"/>
            </StackPanel>
        </Border>
        
        <!-- Main DockControl -->
        <dock:DockControl Layout="{Binding Layout}" 
                          Factory="{Binding Factory}" />
    </DockPanel>
</Window>